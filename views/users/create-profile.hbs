<section id="create-profile">
    <div class="nav-create">
        <h1>Crée ton profil</h1>
    </div>

<div class="contenu-profile">
<form action="/users/create-profile" method="POST" enctype="multipart/form-data">
    <li>
    <label for="username"> Nom d'utilisateur * :</label>
    <input id="username" type="text" name="username" required>
    </li>
    
    <li>
    <label for="icon">Choisis ta photo de profil :</label>
    <img src="{{user.icon}}" class="img-update">
    <input id="icon" type="file" name="icon">
    </li>

    <li>
    <label for="bio"> Rédige ta biographie : </label>
    <textarea id ="bio" type="text" name="bio" maxlength="130" placeholder=""></textarea>
    </li>
   
    <li>
    <label for="city">Dans quelle ville fais-tu ton shopping ?</label>
    <input id="city" type="text" name="city">
    </li>


    <button id="button-profile" type="submit">Valider</button>
</form>
</div>
</section>



